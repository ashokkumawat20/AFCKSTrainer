<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:descendantFocusability="beforeDescendants"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/layout_quotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#556199"
            android:orientation="horizontal"
            android:weightSum="1">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:background="#556199"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/numbers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:background="@android:color/transparent"
                    android:maxLength="4"
                    android:paddingLeft="5dp"
                    android:text="001"
                    android:textColor="#31B946"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".1"
                    android:background="@android:color/transparent"
                    android:maxLength="4"
                    android:paddingLeft="5dp"
                    android:text="-"
                    android:textColor="#31B946"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="3dp"
                    android:text="Ashok"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mobile_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@android:color/transparent"
                    android:gravity="center|right"
                    android:paddingLeft="5dp"
                    android:text="9657816221"
                    android:textColor="#31B946"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/whatsappeButton"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight=".2"

                    android:src="@drawable/whatsaap_img" />

                <ImageView
                    android:id="@+id/callingButton"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".2"
                    android:src="@drawable/call_icon" />
                <ImageView
                    android:id="@+id/feedbackButton"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".2"
                    android:src="@drawable/icon_f" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/batchcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center|left"
                    android:paddingLeft="3dp"
                    android:text="batchcode"
                    android:textColor="#31B946"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/feedBackDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center|right"
                    android:paddingLeft="3dp"
                    android:text="20-July-2017"
                    android:textColor="#31B946"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/mailid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="left|center"
                android:paddingLeft="3dp"
                android:text="ashok.kumawat@afcks.com"
                android:textColor="#31B946"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="#556199"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:indeterminate="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="#000"
                    android:progressTint="@color/rating_c"
                    android:stepSize="1.0" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="#000"
                    android:progressTint="@color/rating_c"
                    android:stepSize="1.0" />

                <RatingBar

                    android:id="@+id/ratingBar3"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="#000"
                    android:progressTint="@color/rating_c"
                    android:stepSize="1.0" />
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
</FrameLayout>



