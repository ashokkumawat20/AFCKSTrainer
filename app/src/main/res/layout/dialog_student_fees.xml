<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/orderedMenu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/title_font"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dailog_backgrnd">

                <LinearLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/noncorporateButton"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:src="@drawable/non_corporate" />

                        <ImageView
                            android:id="@+id/corporateButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/corporate"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/mos"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/mos_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/moscorporate"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/corporatemos"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/view_dayprefrence1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_weight=".1"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/back_c"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <CheckBox
                            android:id="@+id/chkSelectedm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".4"
                            android:button="@drawable/custom_checkbox_design"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/view_dayprefrence"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="SMS"
                            android:textColor="@color/back_c"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/chkSelected"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".4"
                            android:button="@drawable/custom_checkbox_design" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/weekofday"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".8"
                                android:gravity="center|left"
                                android:paddingLeft="2dp"
                                android:text="Non Corporate"
                                android:textColor="@color/back_c"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/nonCorporate"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".3"
                                android:checked="true" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".6"
                                android:gravity="center"
                                android:text="Corporate"
                                android:textColor="@color/back_c"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/Corporate"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".3" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/regScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title">

                    <LinearLayout
                        android:id="@+id/orderedMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/nameEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:background="#E0DADA"
                            android:gravity="left|center"
                            android:hint="* Student Name"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <Spinner
                            android:id="@+id/spinnerFeesMode"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/custom_spinner_background"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown"
                            android:textColor="@android:color/black" />

                        <LinearLayout
                            android:id="@+id/hideForDueFees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <EditText
                                android:id="@+id/feesEdtTxt"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight=".6"
                                android:background="#E0DADA"
                                android:digits="1234567890.-"
                                android:drawablePadding="5dp"
                                android:hint="* Fees"
                                android:inputType="number"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:text="Reverse"
                                android:textColor="@color/back_c"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <CheckBox
                                android:id="@+id/chkSelectedReverse"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".1"
                                android:button="@drawable/custom_checkbox_design" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/duefeesEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="5dp"
                            android:background="#E0DADA"
                            android:digits="1234567890.-"
                            android:hint="* Due Fees"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <EditText
                            android:id="@+id/datePickerNextPayDate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:background="#E0DADA"
                            android:drawablePadding="5dp"
                            android:focusable="false"
                            android:hint="*Select Next Pay Date"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/companyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:background="#E0DADA"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <AutoCompleteTextView
                                android:id="@+id/SearchCompany"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight=".8"
                                android:background="@null"
                                android:gravity="left|center"
                                android:hint="Search Company..."
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:textColorHint="@color/color_faintgray"
                                android:textSize="15sp"></AutoCompleteTextView>

                            <ImageView
                                android:id="@+id/add_comapny"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight=".2"
                                android:background="@null"
                                android:src="@drawable/plus" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/Totalfees"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:background="#E0DADA"
                            android:gravity="center|left"
                            android:hint="* Total Fees with 18% GST"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/availCashback"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/custom_spinner_background"
                            android:text="Click for Avail Cashback "
                            android:textAllCaps="false"
                            android:textColor="@color/text_c"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/eft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/RefNOEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* RefNO"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <Spinner
                                android:id="@+id/spinnerTechnologyMode"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/custom_spinner_background"
                                android:popupBackground="@color/white"
                                android:spinnerMode="dropdown"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/datePickerPayDate"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:focusable="false"
                                android:hint="Select Pay Date"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cheque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/ChequeNoEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* Cheque No"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <EditText
                                android:id="@+id/BankNameEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* Bank Name"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <EditText
                                android:id="@+id/datePickerChequeDate"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:focusable="false"
                                android:hint="Select Cheque Date"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <EditText
                                android:id="@+id/IssuerNameEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* Issuer Name"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/paytm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/PaytmNoEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* Wallet Txn ID"
                                android:inputType="number"
                                android:maxLength="11"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />


                            <EditText
                                android:id="@+id/datePickerPaymentDate"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:focusable="false"
                                android:hint="Select Payment Date"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/refund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/datePickerDateofReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:focusable="false"
                                android:hint="Select Date of Receipt"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <EditText
                                android:id="@+id/refundEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* Reason for Refund"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/oldStudent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/oldBatchNoEdtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:hint="* Old Batch No"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/CashDeposit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/datePickerDepositDate"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:focusable="false"
                                android:hint="Select Deposit Date"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <Spinner
                                android:id="@+id/spinnerBranch"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/custom_spinner_background"
                                android:popupBackground="@color/white"
                                android:spinnerMode="dropdown"
                                android:textColor="@android:color/black" />

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/regScroll"
                    android:paddingBottom="5dp"
                    android:textColor="@color/titlemenu">

                    <Button
                        android:id="@+id/placeBtn"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="#556199"
                        android:padding="10dp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/back_c"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>