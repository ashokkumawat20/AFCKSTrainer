<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity__location__details"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_color"
android:orientation="vertical"
android:weightSum="1"
tools:context=".Activity.EnquiriesActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_margin="@dimen/spacing_medium"
    android:orientation="horizontal"
    android:background="#223458">
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_height="50dp"
        android:background="@drawable/logo_afcks" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_height="match_parent"
        android:gravity="left|center|center_horizontal"
        android:text="Display Enquiries"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:paddingLeft="@dimen/spacing_medium"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
<!--..........................................-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#556199">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose your desired Enquiry"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="@dimen/spacing_small"
        android:id="@+id/textView3" />

</LinearLayout>
<!-- ********************************************************* -->

<android.support.v7.widget.RecyclerView
    android:id="@+id/contactsList"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".9"
    android:layout_margin="@dimen/spacing_small"
    android:clipToPadding="false"
    android:paddingTop="8dp"
    />

</LinearLayout>
