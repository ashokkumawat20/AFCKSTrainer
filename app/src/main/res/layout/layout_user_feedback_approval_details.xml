<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:layout_marginTop="2dp"

    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/layout_quotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"

        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="2dp"
            android:background="#556199"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@android:color/transparent"
                    android:text="001"
                    android:maxLength="4"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@android:color/transparent"
                    android:text="-"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:paddingLeft="5dp"
                android:text="Ashok"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#556199"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:id="@+id/callingButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"

                    android:src="@drawable/call_icon"/>
                <ImageView
                    android:id="@+id/messageButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/msg_icon"/>


                <ImageView
                    android:id="@+id/whatsappeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:layout_marginLeft="1dp"
                    android:src="@drawable/whatsaap_img"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/commentButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/c_icon"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#556199"
                android:drawablePadding="5dp"

                android:layout_marginBottom="2dp"
                android:layout_marginTop= "5dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/feedbackEdtTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint = ""
                    android:lines="8"
                    android:maxLines="20"
                    android:minLines="2"
                    android:paddingLeft="6dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/textcolor"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColorHint="@color/color_faintgray"
                    android:background="#E0DADA"

                   />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#556199"

                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:id="@+id/update"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Update Feedback"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#556199"

                android:orientation="horizontal"
                android:weightSum="2">
               <Button
                   android:id="@+id/approve"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                  android:background="#4CAF50"
                   android:textAllCaps="false"
                   android:text="Approve"/>
                <Button
                    android:id="@+id/reject"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#F44336"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Reject"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>



