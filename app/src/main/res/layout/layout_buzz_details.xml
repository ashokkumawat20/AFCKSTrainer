<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:descendantFocusability="beforeDescendants"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/layout_quotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#556199"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/seqNol"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight=".02"
                android:background="@drawable/round_shape_l"
                android:gravity="center"
                android:text="965"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seqNom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight=".02"
                android:background="@drawable/round_shape_m"
                android:gravity="center"
                android:text="965"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seqNoh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight=".02"
                android:background="@drawable/round_shape_h"
                android:gravity="center"
                android:text="965"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buzzCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".58"
                android:background="@android:color/transparent"
                android:paddingLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/withmoney"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".2"
                android:src="@drawable/with_money"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/notmoney"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".2"
                android:src="@drawable/not_money"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/notstart"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".2"
                android:src="@drawable/notstarting"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pendding"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".2"
                android:src="@drawable/pennding"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/complete"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".2"
                android:src="@drawable/complete"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"

            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/clickForShowBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text="Ashok"
                    android:textColor="@color/textcolor"

                    />

                <TextView
                    android:id="@+id/taskInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text="Ashok"
                    />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/expectedDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:background="#E0DADA"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="*Expected Date"
                    android:padding="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/color_faintgray"


                    />

                <EditText
                    android:id="@+id/expectedTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".5"
                    android:background="#E0DADA"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="*Expected Time"
                    android:padding="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/color_faintgray" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/remarksEdtTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#E0DADA"
                    android:drawablePadding="5dp"
                    android:hint="* Remarks"
                    android:inputType="textCapSentences"
                    android:paddingLeft="6dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/color_faintgray" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/notes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/buzzSnooze"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Snooze"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buzzShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</FrameLayout>



