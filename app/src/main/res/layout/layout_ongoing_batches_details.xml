<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:id="@+id/layout_quotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#556199"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/batch_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:text="AKBA001"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layhideshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum=".5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:paddingLeft="5dp"
                        android:text="Classes"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".078"
                        android:text="Time"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".078"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Total"
                        android:textColor="@color/white" />


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".078"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Active"
                        android:textColor="@color/white" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".166"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Discontinue"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum=".5">


                    <TextView
                        android:id="@+id/totalClasses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="1"
                        android:textColor="@color/text_c" />

                    <TextView
                        android:id="@+id/totalTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".098"
                        android:text="2.30"
                        android:textColor="@color/text_c" />


                    <TextView
                        android:id="@+id/totalStudents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".058"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/confirm_color"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/activeStudents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".078"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/confirm_color"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/disContinueStudents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".166"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#F44336" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1.5">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:paddingLeft="5dp"
                                android:text="Students"
                                android:textColor="@color/white" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="Attendance"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="Fees"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:weightSum="1.5">


                            <TextView
                                android:id="@+id/activeStPre"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="100%"
                                android:textColor="@color/text_c" />


                            <TextView
                                android:id="@+id/presentPrec"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="100%"
                                android:textColor="@color/text_c" />

                            <TextView
                                android:id="@+id/weekFees"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="@color/text_c"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3">

                        <LinearLayout
                            android:id="@+id/latWCBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#556199"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/whatsapp"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/whatsaap_img" />

                            <ImageView
                                android:id="@+id/calling"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/call_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>



