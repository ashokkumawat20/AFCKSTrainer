<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity__new__updates"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="1"
android:background="@color/bg_color"
android:focusable="true"
android:focusableInTouchMode="true"
android:orientation="vertical"
tools:context="in.afckstechnologies.mail.afckstrainer.Activity.UpdateTemplateContactsActivity">
<!--..........................................-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/spacing_medium"
    android:layout_weight=".1"
    android:background="#223458"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_gravity="center"

        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_weight=".2"
        android:background="@drawable/logo_afcks"
        android:paddingBottom="@dimen/spacing_medium" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_weight=".8"
        android:gravity="left|center|center_horizontal"
        android:paddingLeft="@dimen/spacing_medium"
        android:text="Update Template"
        android:textColor="#ffffff"
        android:textSize="20sp"

        android:textStyle="bold" />
</LinearLayout>
<!-- ********************************************************* -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_weight=".14"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_Suject"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_spinner_background"
        android:gravity="center"
        android:hint="Enter Subject Name"
        android:textColorHint="@color/color_faintgray"
        android:inputType="text"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/add_Tag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/custom_spinner_background"
        android:gravity="center"
        android:hint="Enter Tag Name"
        android:textColorHint="@color/color_faintgray"
        android:inputType="text"
        android:textColor="@android:color/black" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_marginTop="3dp"
    android:layout_weight=".5"
    android:orientation="horizontal"
    android:weightSum="1">

    <EditText
        android:id="@+id/msgData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="Enter Message...."
        android:textColorHint="@color/color_faintgray"
        android:inputType="textMultiLine"
        android:padding="@dimen/spacing_small"
        android:textColor="#000000" />

</LinearLayout>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/spacing_medium"
    android:layout_weight=".1"
    android:background="@color/bg_spnner"
    android:orientation="horizontal"
    android:weightSum="1">

    <Button
        android:id="@+id/saveTemplate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/bg_spnner"
        android:gravity="center"
        android:text="Update "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
</LinearLayout>
