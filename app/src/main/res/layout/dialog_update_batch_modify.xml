<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/orderedMenu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/title_font"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dailog_backgrnd">

                <LinearLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Update Batch details!!"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/regScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title">

                    <LinearLayout
                        android:id="@+id/batchData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/datePickerCal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0DADA"
                            android:drawablePadding="5dp"
                            android:focusable="false"
                            android:hint="Select Start Batch Date"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <EditText
                                android:id="@+id/datePickerEndBatch"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="2dp"

                                android:layout_weight=".9"
                                android:background="#E0DADA"
                                android:drawablePadding="5dp"
                                android:focusable="false"
                                android:hint="Select Batch End Date"
                                android:inputType="textCapSentences"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/color_faintgray" />

                            <ImageView
                                android:id="@+id/clearDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="2dp"
                                android:layout_weight=".1"
                                android:background="#E0DADA"
                                android:src="@drawable/ic_clear_black_24dp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/timingsEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0DADA"
                            android:drawablePadding="5dp"
                            android:hint="Batch Timings"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <Spinner
                            android:id="@+id/spinnerBranch"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:background="#E0DADA"
                            android:popupBackground="@color/color_black"
                            android:spinnerMode="dialog"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/frequencyEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0DADA"
                            android:drawablePadding="5dp"
                            android:hint="Frequency"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <EditText
                            android:id="@+id/feesEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0DADA"
                            android:drawablePadding="5dp"
                            android:hint="Fees"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <EditText
                            android:id="@+id/durationEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0DADA"
                            android:drawablePadding="5dp"
                            android:hint="Duration"
                            android:inputType="textCapSentences"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />

                        <EditText
                            android:id="@+id/commentEdtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"

                            android:layout_weight="1"
                            android:background="#E0DADA"
                            android:gravity="top|left"
                            android:hint="Enter Notes"
                            android:inputType="textCapSentences|textMultiLine"
                            android:lines="8"
                            android:maxLines="10"
                            android:minLines="3"
                            android:paddingLeft="6dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/color_faintgray" />


                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/regScroll"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:textColor="@color/titlemenu"
                    android:weightSum=".5">

                    <Button
                        android:id="@+id/saveBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight=".5"
                        android:background="#556199"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="@color/back_c"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>