<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity__new__updates"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="1"
android:background="@color/bg_color"
android:focusable="true"
android:focusableInTouchMode="true"
android:orientation="vertical"
tools:context="in.afckstechnologies.mail.afckstrainer.Activity.AddTemplatesActivity">
<!--..........................................-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/spacing_medium"
    android:layout_weight=".1"
    android:background="#223458"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_gravity="center"

        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_weight=".2"
        android:background="@drawable/logo_afcks"
        android:paddingBottom="@dimen/spacing_medium" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_weight=".8"
        android:gravity="left|center|center_horizontal"
        android:paddingLeft="@dimen/spacing_medium"
        android:text="Add Template"
        android:textColor="#ffffff"
        android:textSize="20sp"

        android:textStyle="bold" />
</LinearLayout>
<!-- ********************************************************* -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_weight=".07"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_spinner_background"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@android:color/black" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_weight=".1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/first_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="firstName"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/course_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="courseName"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/start_date"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="startDate"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/notes"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="notes"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/timings"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="timings"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/frequency"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="frequency"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="duration"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/branch_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle_for_bank"
            android:text="branchName"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_marginTop="3dp"
    android:layout_weight=".5"
    android:orientation="horizontal"
    android:weightSum="1">

    <EditText
        android:id="@+id/msgData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:padding="@dimen/spacing_small"
        android:textColor="#000000" />


</LinearLayout>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/spacing_medium"
    android:layout_weight=".1"
    android:background="@color/bg_spnner"
    android:orientation="horizontal"
    android:weightSum="1">

    <Button
        android:id="@+id/saveTemplate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/bg_spnner"
        android:gravity="center"
        android:text="Save "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
</LinearLayout>
