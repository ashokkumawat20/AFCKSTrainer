<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="in.afckstechnologies.mail.afckstrainer.Activity.RequestChangeActivity">

    <!-- Header aligned to top -->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:background="#223458"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:background="@drawable/logo_afcks"
                android:paddingBottom="@dimen/spacing_medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="left|center|center_horizontal"
                android:text="Ticketing Management"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

    <!-- Footer aligned to bottom -->

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#556199"
            android:orientation="horizontal"
            android:weightSum="4">


        </LinearLayout>

    </RelativeLayout>


    <!-- Scrollable Item below header and above footer -->

    <ScrollView

        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- ********************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinnerUsers"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".4"
                    android:background="@drawable/custom_spinner_background"
                    android:popupBackground="@color/white"
                    android:spinnerMode="dropdown"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nameUsers"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".4"
                    android:background="@drawable/custom_spinner_background"
                    android:gravity="center"
                    android:text="asas"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/prihigh"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_weight=".3"
                        android:background="@color/color_faintgray"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="High"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                    <RadioButton
                        android:id="@+id/primedium"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_weight=".3"
                        android:background="@color/color_faintgray"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="Medium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/prilow"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_weight=".3"
                        android:background="#4CAF50"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:gravity="center"
                        android:text="Low"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                </RadioGroup>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroupCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/taskCat"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".3"
                    android:background="#4CAF50"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Task"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />


                <RadioButton
                    android:id="@+id/reminderCat"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".3"
                    android:background="@color/color_faintgray"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Reminder"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/messageCat"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".3"

                    android:background="@color/color_faintgray"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />


            </RadioGroup>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/expectedDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:background="#E0DADA"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="*Expected Date"
                    android:padding="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/color_faintgray"


                    />

                <EditText
                    android:id="@+id/expectedTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".5"
                    android:background="#E0DADA"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="*Expected Time"
                    android:padding="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/color_faintgray" />


            </LinearLayout>

            <EditText
                android:id="@+id/subjectEdtTxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".2"
                android:background="#E0DADA"
                android:hint="Enter Request Subject"
                android:inputType="textCapSentences"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/color_faintgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum=".9">

                <Button
                    android:id="@+id/chooseImage"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:background="@color/bg_spnner"
                    android:gravity="center"
                    android:text="Image"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/copyData"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_weight=".3"
                    android:background="@color/bg_spnner"
                    android:gravity="center"
                    android:text="Fill Down"
                    android:textAllCaps="false"

                    android:textStyle="bold" />


                <Button
                    android:id="@+id/sendData"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_weight=".3"
                    android:background="#B03060"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/descEdtTxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".6"
                android:background="#E0DADA"
                android:gravity="top|left"
                android:hint=" Enter Request Comments \n Enter between * to Bold \n Enter between _ to italic \n Enter between ** to underline"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:paddingLeft="6dp"
                android:scrollbars="vertical"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/color_faintgray" />


            <GridView
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
