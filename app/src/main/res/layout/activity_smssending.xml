<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__location__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fillViewport="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="in.afckstechnologies.mail.afckstrainer.Activity.SMSSendingActivity">
    <!--..........................................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:background="#223458"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_weight=".2"
            android:background="@drawable/logo_afcks" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_weight=".8"
            android:gravity="left|center|center_horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:text="Sending SMS"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    <!-- ********************************************************* -->

    <!--..........................................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/spacing_medium"
        android:background="#223458"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/mobileNoEdtTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="Enter Mobile No."
            android:inputType="number"

            android:singleLine="true"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />


    </LinearLayout>
    <!-- ********************************************************* -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_medium"
            android:background="#E0E0E0"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">


                <EditText
                    android:id="@+id/smsEdtTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight=".8"
                    android:background="#FFFFFF"
                    android:drawablePadding="5dp"
                    android:gravity="top|left"
                    android:hint="Write sms"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="6"
                    android:paddingLeft="6dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/color_faintgray" />


                <Button
                    android:id="@+id/sendSMSBtn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight=".2"
                    android:background="#556199"
                    android:text="Send SMS"
                    android:textAllCaps="false"
                    android:textColor="@color/back_c"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
