<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity__new__updates"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="1"
android:background="@color/bg_color"
android:focusable="true"
android:focusableInTouchMode="true"
android:orientation="vertical"
tools:context="in.afckstechnologies.mail.afckstrainer.Activity.WriteSendSmsActivity">
<!--..........................................-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/spacing_medium"
    android:layout_weight=".1"
    android:background="#223458"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_gravity="center"

        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_weight=".2"
        android:background="@drawable/logo_afcks"
        android:paddingBottom="@dimen/spacing_medium" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_weight=".8"
        android:gravity="left|center|center_horizontal"
        android:paddingLeft="@dimen/spacing_medium"
        android:text="Send Details"
        android:textColor="#ffffff"
        android:textSize="20sp"

        android:textStyle="bold" />
</LinearLayout>
<!-- ********************************************************* -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_weight=".07"
    android:background="@drawable/custom_spinner_background"
    android:weightSum="1"
    android:orientation="horizontal"
    >

    <Spinner
        android:id="@+id/spinnerTemplates"
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="match_parent"
        android:popupBackground="@color/white"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/black" />
    <ImageView
        android:id="@+id/defaulticon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:padding="5dp"
        android:src="@drawable/default_icon"
        />
    <ImageView
        android:id="@+id/attachicon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:padding="5dp"
        android:src="@drawable/ic_attach_file_black_24dp"
        />
    <ImageView
        android:id="@+id/clear"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:padding="5dp"
        android:src="@drawable/ic_clear_black_24dp"
        />


</LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_marginTop="3dp"
    android:layout_weight=".6"
    android:orientation="horizontal"
    android:weightSum="1">

    <EditText
        android:id="@+id/msgData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:gravity="top|left"
        android:padding="@dimen/spacing_small"
        android:background="@color/white"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".1"
    android:background="@color/bg_spnner"
    android:orientation="horizontal"
    android:weightSum="3">


    <ImageView
        android:id="@+id/msg_img"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/sms_icon"
        android:gravity="center" />
    <ImageView
        android:id="@+id/msg_whatsaap"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="gone"
        android:src="@drawable/whatsaap_img"
        android:gravity="center" />

    <ImageView
        android:id="@+id/mail_img"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/mail_icon"
        android:gravity="center" />
    <ImageView
        android:id="@+id/addTemplate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/plus"
        android:gravity="center" />


</LinearLayout>
</LinearLayout>
